<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="me.beltyukov.sunshine" >

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="me.beltyukov.sunshine.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="me.beltyukov.sunshine.DetailActivity"
            android:label="@string/title_activity_detail"
            android:parentActivityName="me.beltyukov.sunshine.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="me.beltyukov.sunshine.MainActivity" />
        </activity>
        <activity
            android:name="me.beltyukov.sunshine.SettingsActivity"
            android:label="@string/title_activity_settings"
            android:parentActivityName="me.beltyukov.sunshine.MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="me.beltyukov.sunshine.MainActivity" />
        </activity>
        <provider
            android:authorities="me.beltyukov.sunshine"
            android:name="me.beltyukov.sunshine.data.WeatherProvider" />
    </application>

</manifest>
